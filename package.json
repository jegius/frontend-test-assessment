{
  "name": "frontend-test-assessment",
  "version": "0.0.1",
  "description": "Test assessment for miro frontend",
  "main": "index.js",
  "scripts": {
    "start": "webpack-dev-server --port 9000 --inline --progress --profile --colors --watch --content-base src/ --mode development",
    "build": "webpack --config webpack.config.js --mode production",
    "build.prod": "webpack --config webpack.config.js -p",
    "build.esnext": "npm run build:types && npm run build:js",
    "build:types": "tsc --emitDeclarationOnly",
    "build:js": "babel src --out-dir dist --extensions \".ts,.tsx\" --source-maps inline",
    "build.all": "npm run build.prod && npm run build.esnext",
    "test": "karma start karma.config.js"
  },
  "keywords": [
    "webpack",
    "webpack4",
    "typescript"
  ],
  "author": "Ivan Alekseev",
  "license": "MIT",
  "devDependencies": {
    "@types/jasmine": "^3.5.10",
    "@types/node": "^13.9.8",
    "less": "^3.11.1",
    "less-loader": "^5.0.0",
    "file-loader": "^6.0.0",
    "karma-es6-shim": "^1.0.0",
    "style-loader": "^1.1.3",
    "css-loader": "^3.4.2",
    "awesome-typescript-loader": "^5.2.1",
    "copy-webpack-plugin": "^5.1.1",
    "jasmine-core": "^3.5.0",
    "karma": "^4.4.1",
    "karma-jasmine": "^3.1.1",
    "karma-phantomjs-launcher": "^1.0.4",
    "mini-css-extract-plugin": "^0.9.0",
    "url-loader": "^4.0.0",
    "karma-webpack": "^4.0.2",
    "source-map-loader": "^0.2.4",
    "tslint": "^6.1.0",
    "tslint-loader": "^3.5.4",
    "typescript": "^3.8.3",
    "webpack": "^4.42.1",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.10.3"
  }
}
